        {
          "name": "1. Get All Posts (Replica 1)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8081/api/posts",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "posts"]
            }
          },
          "response": []
        },
        {
          "name": "2. Watch Video 1 (Replica 1)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is video file\", function () {",
                  "    pm.response.to.have.header('Content-Type');",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('video');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8081/api/posts/1/video",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "posts", "1", "video"]
            },
            "description": "Ovaj endpoint inkrementira CRDT brojač u video_view_crdt_replica1 tabeli"
          },
          "response": []
        },
        {
          "name": "3. Get CRDT Views for Video 1 (Replica 1)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has videoId\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('videoId');",
                  "    pm.expect(jsonData.videoId).to.eql(1);",
                  "});",
                  "",
                  "pm.test(\"Response has totalViews\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('totalViews');",
                  "    pm.expect(jsonData.totalViews).to.be.above(0);",
                  "});",
                  "",
                  "pm.test(\"Response has replicaViews array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('replicaViews');",
                  "    pm.expect(jsonData.replicaViews).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
